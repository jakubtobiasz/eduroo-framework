{
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "vendor/bin/monorepo-builder validate"
      },
      {
        "action": "vendor/bin/psalm"
      },
      {
        "action": "vendor/bin/phpstan analyse"
      },
      {
        "action": "vendor/bin/pest"
      },
      {
        "action": "vendor/bin/deptrac"
      },
      {
        "action": "vendor/bin/ecs --fix"
      }
    ]
  }
}
